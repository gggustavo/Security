@model Model.Permission

@{
    ViewBag.Title = "Delete";
}

<br />
<div class="bs-component">
    <ul class="breadcrumb">
        <li><a href="~/"><span class="glyphicon glyphicon-home"></span> Home</a></li>
        <li><a href="~/Permission"><span class="glyphicon glyphicon-ok"></span> Permisos</a></li>
        <li class="active">Borrar</li>
    </ul>
</div>

<div>
    
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name, new { @class = "form-control" })
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

      <div class="row">
          <div class="col-md-2 text-right col-md-offset-10">
              <input type="submit" value="Aceptar" class="btn btn-danger" />
              <a class="btn btn-warning" href="@Url.Action("Index")">Cancelar</a>
          </div>
        </div>
    }
</div>
